#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard/.envrc" "/mnt/LinuxExpansion/Places/Documents/Projects/Rust/Iced/iced_soundboard/.direnv"/*.rc
